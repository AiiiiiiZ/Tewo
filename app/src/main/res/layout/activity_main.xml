<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210sp"
        android:fontFamily="@font/bebas_neue"
        android:text="@string/logo1"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorSecond"
        android:textSize="46sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo1"
        android:layout_marginLeft="135sp"
        android:fontFamily="@font/bebas_neue"
        android:text="@string/logo2"
        android:textAlignment="center"
        android:textColor="@color/colorFirst"
        android:textSize="24sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/logo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo1"
        android:layout_marginLeft="220sp"
        android:fontFamily="@font/bebas_neue"
        android:text="@string/logo3"
        android:textAlignment="center"
        android:textColor="@color/colorSecond"
        android:textSize="24sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/logos"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="103sp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/dulvbtltu3w" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="276dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="85dp"
        app:srcCompat="@drawable/_hclere8hg4" />

    <Button
        android:id="@+id/button_entrance"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="256dp"
        android:fontFamily="@font/bebas_neue"
        android:freezesText="false"
        android:text="Войти"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorSecond"
        android:textSize="20sp"
        app:backgroundTint="@color/white" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Регистрация"
        android:textAlignment="center"
        android:textColor="@color/colorSecond"
        android:textSize="20sp"
        app:backgroundTint="@color/white" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Просмотреть карту"
        android:textAlignment="center"
        android:textColor="@color/colorSecond"
        android:textSize="12sp"
        app:backgroundTint="@color/colorFirst" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="310dp"
        android:fontFamily="@font/bebas_neue"
        android:text="Вход"
        android:textAlignment="center"
        android:textColor="@color/colorSecond"
        android:textSize="22sp" />

</RelativeLayout>